<%- include ./main.ejs %>

<% for (let i = 0; i < members.length; i++) { %>
<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
        <div class="card">
            <h4> <%= members[i].name %></h4>
            Email : <%= members[i].email %><br>
            City :  <%= members[i].city %><br><br>
            <a class="btn btn-primary" href="/subscribers/edit/<%= members[i]._id %>">Edit</a>
            <a class="btn btn-danger" href="/subscribers/delete/<%= members[i]._id %>">Delete</a>
            <div class="card">
                <h4>Movies Watched</h4>
                    <ul>
                        <% for (let j=0; j< members[i].movies.length; j++) { %>
                            <li><%= members[i].movies[j].movieName %>, <%= members[i].movies[j].date %> </li>      
                        <% } %>
                    </ul>
            </div>
        </div>
    </div>
</div>
<% } %>
