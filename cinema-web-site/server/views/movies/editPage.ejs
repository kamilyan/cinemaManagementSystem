<%- include ./main.ejs %>
<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
        <form method="POST" action="add">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" value=" <%= movie.name %> " id="name" name="name">
            </div>
            <div class="form-group">
                <label for="genres">Geners:</label>
                <input type="text" class="form-control" value=" <%= movie.genres %> " id="genres" name="genres">
            </div>
            <div class="form-group">
                <label for="imageURL">Image URL:</label>
                <input type="text" class="form-control" value=" <%= movie.image %> " id="imageURL" name="imageURL">
            </div>
            <div class="form-group">
                <label for="premiered">Premiered :</label>
                <input type="date" class="form-control" value="<%= movie.premiered %>" id="premiered" name="premiered">
            </div>
            <input class="btn btn-primary" type="submit" value="Save">
            <a class="btn btn-danger" href="/movies">Cancel</a>
        </form>
    </div>
</div>